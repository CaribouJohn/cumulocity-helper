{
    "name": "cumulocity-helper",
    "displayName": "cumulocity-helper",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onView:cumulocity-view"
    ],
    "contributes": {
        "commands": [
            {
                "command": "cumulocity.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "cumulocity.deleteWorkspace",
                "title": "More Info",
                "icon": {
                    "light": "resources/light/info.svg",
                    "dark": "resources/dark/info.svg"
                }
            },
            {
                "command": "cumulocity.createTenantRecord",
                "title": "Create workspace",
                "icon": {
                    "light": "resources/light/library_add.svg",
                    "dark": "resources/dark/library_add.svg"
                }
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "cumulocity-view",
                    "name": "Cumulocity"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "when": "view == cumulocity-view",
                    "command": "cumulocity.refresh",
                    "group": "navigation"
                },
                {
                    "when": "view == cumulocity-view",
                    "command": "cumulocity.createTenantRecord",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "when": "view == cumulocity-view && viewItem == workspace",
                    "command": "cumulocity.deleteWorkspace",
                    "group": "inline@1"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.54.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0"
    },
    "dependencies": {
        "@c8y/client": "^1007.0.35"
    }
}